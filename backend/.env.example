# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# JWT Configuration
JWT_SECRET_KEY=your_secret_key_change_in_production_make_it_long_and_secure
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=7

# OCR Configuration
OCR_MODEL_PATH=models/ocr
OCR_CONFIDENCE_THRESHOLD=0.8
GPU_ENABLED=true

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=AccuRead Backend
DEBUG=false

# Database Configuration
DATABASE_URL=sqlite:///./accuread.db

# CORS Configuration
ALLOWED_ORIGINS=["*"]

# Rate Limiting Configuration
DEFAULT_RATE_LIMIT=100
OCR_RATE_LIMIT=30
AUTH_RATE_LIMIT=5
EXPORT_RATE_LIMIT=3

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/bmp"]
